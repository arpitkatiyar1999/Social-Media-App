<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shimmer_friends_tv"
            style="@style/PoppinsSemiBold16spRhinoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/drawable_rounded_12"
            android:backgroundTint="@color/light_grey_shade_1"
            android:minWidth="88dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/shimmer_friend_requests_tv"
            style="@style/PoppinsSemiBold16spRhinoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/drawable_rounded_12"
            android:backgroundTint="@color/light_grey_shade_1"
            android:minWidth="88dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            app:layout_constraintStart_toEndOf="@id/shimmer_friends_tv"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.SearchView
            android:id="@+id/shimmer_search_user_sv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/drawable_rounded_8"
            android:backgroundTint='@color/light_grey_shade_1'
            app:iconifiedByDefault="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shimmer_friends_tv"
            app:queryBackground="@null"
            app:searchHintIcon="@null"
            app:searchIcon="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/shimmer_search_user_sv">

            <include layout="@layout/item_shimmer_search_user" />

            <include layout="@layout/item_shimmer_search_user" />

            <include layout="@layout/item_shimmer_search_user" />

            <include layout="@layout/item_shimmer_search_user" />

            <include layout="@layout/item_shimmer_search_user" />

            <include layout="@layout/item_shimmer_search_user" />

            <include layout="@layout/item_shimmer_search_user" />

            <include layout="@layout/item_shimmer_search_user" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>