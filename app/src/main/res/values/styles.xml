<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PoppinsSemiBold16spWhiteTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PoppinsSemiBold24spRhinoTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/rhino</item>
    </style>

    <style name="PoppinsRegular14spRhinoTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/rhino</item>
    </style>

    <style name="PoppinsSemiBold16spRhinoTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/rhino</item>
    </style>

    <style name="ShimmerTextView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/drawable_rounded_8</item>
        <item name="android:backgroundTint">@color/light_grey_shade_1</item>
    </style>

    <style name="PoppinsMedium16spRhinoTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/rhino</item>
    </style>

    <style name="PoppinsSemiBold18spRhinoTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/rhino</item>
    </style>

    <style name="PoppinsSemiBold14spRhinoTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/rhino</item>
    </style>

    <style name="PoppinsRegular12spTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/rhino</item>
    </style>

    <style name="BlueBtn12dpTheme" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/drawable_button_bg</item>
    </style>

    <style name="GreyBtn12dpTheme" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/rhino</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/light_grey</item>
        <item name="android:background">@drawable/drawable_rounded_12</item>
    </style>

    <style name="PoppinsSemiBold14spBlueTextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeColor">@color/box_stroke_color</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
        <item name="hintTextColor">@color/blue</item>
    </style>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue</item>
        <!--selected Item color-->
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <!-- Ok Cancel Color-->
        <item name="colorOnPrimary">@color/blue</item>
    </style>

    <style name="TransparentStatusBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CircularImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>